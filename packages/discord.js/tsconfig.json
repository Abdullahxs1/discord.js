{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Emit
    "noEmit": true,

    // Output Formatting
    "pretty": false,

    // Completeness
    "skipDefaultLibCheck": true,

    "types": [
      "@discordjs/builders",
      "@discordjs/util",
      "@discordjs/collection",
      "@discordjs/rest",
      "@discordjs/ws",
      "discord-api-types/v10",
      "node",
      "tsd",
      "jest",
      "undici",
      "@sapphire/snowflake"
    ]
  },
  "include": ["typings", "scripts"],
  "exclude": ["src/**/*.d.ts"]
}
